<tr>
  <td class="middle">
    <div class="media">
      <div class="media-left">
        <%= link_to contact_path(contact) do %>
          <%= image_tag(contact.get_avatar, class: 'media-object',
            style: 'width: 100px; height: 100px;') %>
        <% end %>
      </div>
      <div class="media-body">
        <h4 class="media-heading"><%= contact.name %></h4> 
        <address>
          <strong><%= contact.company %></strong><br>
          <%= contact.email %>
        </address>
        <span class='badge' style='margin-top: -20px;'><%= contact.group.name %></span>
      </div>
    </div>
  </td>
  <td width="100" class="middle">
    <div>
      <%= link_to edit_contact_path(contact), 
        class: 'btn btn-circle btn-default btn-xs', title: 'Edit'  do %>
        <i class="glyphicon glyphicon-edit"></i>
      <% end %>
      
      <%= link_to contact_path(contact), 
        class: 'btn btn-circle btn-danger btn-xs', title: 'Remove', method: :delete do %>
        <i class="glyphicon glyphicon-remove"></i>
      <% end %>
    </div>
  </td>
</tr>