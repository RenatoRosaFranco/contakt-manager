<header>
  <nav class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" 
         data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <%= link_to root_path, class: 'navbar-brand text-uppercase' do %>
          My Contact
        <% end %>
      </div>

      <!-- /.navbar-header -->
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class='nav navbar-nav'>
        <% if current_user %>
          <li class='active'><%= link_to 'Dashboard', dashboard_path %></li>
        <% end %>
          <li class='#'><%= link_to 'All Contacts', contacts_path %></li>
        </ul> 

        <div class='navbar-right'>
        <% if !current_user %>
          <%= link_to new_user_session_path, 
            class: 'btn btn-default navbar-btn' do %>
              Login
          <% end %>
          <%= link_to new_user_registration_path, 
            class: 'btn btn-primary navbar-btn' do %>
              Register
          <% end %>
        </div>
        <% else %>
        <div class='nav navbar-right navbar-nav'>
          <% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <i class="fas fa-user-circle"></i>
            <%= current_user.name %></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Profile', edit_user_registration_path %></li>
              <li><%= link_to 'Logout',  destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
          <% end %>
        </div>
      <% end %> 
      </div>
    </div>
  </nav>
</header>